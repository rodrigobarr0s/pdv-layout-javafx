<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21.0.1" fx:controller="com.example.gui.controller.PDVController">

    <!-- Top: Cabeçalho -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 20px;" text="PDV - Ponto de Venda" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <Label fx:id="lblDateTime" style="-fx-text-fill: white;" />
        </HBox>
    </top>

    <!-- Center: Área de produtos e carrinho -->
    <center>
        <SplitPane dividerPositions="0.5">
            <!-- Lista de produtos -->
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label style="-fx-font-size: 16px;" text="Produtos" />
                <TextField fx:id="txtSearchProduct" promptText="Buscar produto..." />
                <TableView fx:id="tableProducts" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="200" text="Nome" />
                        <TableColumn fx:id="colPrice" prefWidth="100" text="Preço" />
                    </columns>
                </TableView>
                <Button onAction="#onAddToCart" text="Adicionar ao Carrinho" />
            </VBox>

            <!-- Carrinho -->
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <Label style="-fx-font-size: 16px;" text="Carrinho" />
                <TableView fx:id="tableCart" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colCartProduct" prefWidth="200" text="Produto" />
                        <TableColumn fx:id="colCartQuantity" prefWidth="50" text="Qtd" />
                        <TableColumn fx:id="colCartSubtotal" prefWidth="100" text="Subtotal" />
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Label style="-fx-font-size: 16px;" text="Total:" />
                    <Label fx:id="lblTotal" style="-fx-font-size: 16px; -fx-text-fill: green;" />
                </HBox>
                <Button onAction="#onCheckout" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Finalizar Venda" />
            </VBox>
        </SplitPane>
    </center>

    <!-- Bottom: Rodapé -->
    <bottom>
        <HBox spacing="10" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="Operador:" />
            <Label fx:id="lblOperator" />
        </HBox>
    </bottom>

</BorderPane>
